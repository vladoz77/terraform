services:
  jenkins:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{ jenkins_container_name}}
    privileged: true
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{ jenkins_container_name}}.rule=Host(`{{ jenkins_url }}`)"
      - "traefik.http.routers.{{ jenkins_container_name}}.entrypoints=websecure"
      - "traefik.http.routers.{{ jenkins_container_name}}.tls.certresolver=le"
      - "traefik.http.services.{{ jenkins_container_name}}.loadbalancer.server.port={{ jenkins_web_port }}"
    volumes:
      - jenkins-data:/var/jenkins_home
    ports:
      - 2376:2376
      - {{ jenkins_web_port }}:{{ jenkins_web_port }}
      - 50000:50000
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ jenkins_web_port }}/health/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    networks: 
      {{ docker_network_name }}:
  
volumes:
 jenkins-data:

networks:
  {{ docker_network_name }}:
    external: true
      
      

      
  